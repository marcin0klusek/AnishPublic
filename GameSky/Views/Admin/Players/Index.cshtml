@model IEnumerable<EFDataAccessLibrary.Models.Player>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NickName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Potencial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Knowledge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsForSale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerPosition.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NickName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Potencial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Knowledge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsForSale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerPosition.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlayerID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlayerID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlayerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
