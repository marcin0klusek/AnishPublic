@model EFDataAccessLibrary.Models.WarningBar
@using EFDataAccessLibrary.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    WarningBar bar = ViewBag.Bar;
}

<h1>Manage</h1>

<h4>WarningBar</h4>
<hr />
<div class="row" style="margin-left: 40px">
    <div class="col-md-4">
        <form asp-controller="Admin" asp-action="Manage" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" value="@bar.ID" />
            <div class="form-group">
                <label asp-for="Text" class="control-label">Treść</label>
                <input asp-for="Text" class="form-control" value="@bar.Text" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    @if (bar.IsActive())
                    {
                        <input class="form-check-input" type="checkbox" asp-for="Active" checked /> <text>Aktywny</text>
                    }
                    else
                    {
                        <input class="form-check-input" type="checkbox" asp-for="Active" /><text>Aktywny</text>
                    }
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
