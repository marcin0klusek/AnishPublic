@page
@model GameSky.Pages.Matches.ResultsModel
@using EFDataAccessLibrary.Models
@using GameSky.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewBag.Title = "Results";
}
@section Styles{
    <link rel="stylesheet" href="~/css/matchesAndResults.css" />
}

@{
    Random rnd = new Random();
    List<Match> upcoming = ViewBag.Upcoming;
    List<Match> finished = ViewBag.Finished;
}

<div class="results">
    <div class="results-all">
        <div class="results-sublist">
            <div class="standard-headline">Upcoming matches</div>
            @foreach(Match match in upcoming)
            {
                <div class="result-con">
                    <a asp-controller="Matches" asp-action="Match" asp-route-id="@match.MatchID">
                        <div class="result">
                            <table>
                                <tbody>
                                    <tr>
                                        <td class="team-cell">
                                            <div class="line-align team1">
                                                <div class="team">@match.Team1.TeamName</div>
                                                <img src="@Country.GetCountry(match.Team1.Country)">
                                            </div>
                                        </td>
                                        <td class="result-score">
                                            <span class="score-won">@match.ScoreTeam1</span>
                                            -
                                            <span class="score-lost">@match.ScoreTeam2</span>
                                        </td>
                                        <td class="team-cell">
                                            <div class="line-align team2">
                                                <img src="@Country.GetCountry(match.Team2.Country)">
                                                <div class="team">@match.Team2.TeamName</div>
                                            </div>
                                        </td>
                                        <td class="event">
                                            <span class="event-name">@match.Event.Name</span>
                                        </td>
                                        <td class="star-cell">
                                            <div class="map-text">bo1</div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </a>
                </div>
            }
        </div>
        <div class="results-sublist">
            <div class="standard-headline">Finished matches</div>
            @foreach (Match match in finished)
            {
                <div class="result-con">
                    <a asp-controller="Matches" asp-action="Match" asp-route-id="@match.MatchID">
                        <div class="result">
                            <table>
                                <tbody>
                                    <tr>
                                        <td class="team-cell">
                                            <div class="line-align team1">
                                                <div class="team">@match.Team1.TeamName</div>
                                                <img src="@Country.GetCountry(match.Team1.Country)">
                                            </div>
                                        </td>
                                        <td class="result-score">
                                            <span class="score-won">@match.ScoreTeam1</span>
                                            -
                                            <span class="score-lost">@match.ScoreTeam2</span>
                                        </td>
                                        <td class="team-cell">
                                            <div class="line-align team2">
                                                <img src="@Country.GetCountry(match.Team2.Country)">
                                                <div class="team">@match.Team2.TeamName</div>
                                            </div>
                                        </td>
                                        <td class="event">
                                            <span class="event-name">@match.Event.Name</span>
                                        </td>
                                        <td class="star-cell">
                                            <div class="map-text">@match.Map.Name.Replace("de_", "")</div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>