@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@section Styles{
                <link rel="stylesheet" href="~/css/identity.css" />
            }
<div class="form-container">
    <div class="flex-column align-middle login-holder">
        <h3 class="title">GameSky</h3>
        <h5 class="subtitle">Rejestracja</h5>
        <div class="form-holder">
            <section>
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Input.Email" class="form-control" placeholder="adres@email.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.Password" class="form-control" placeholder="Hasło" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Potwierdź hasło" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.TeamName" class="form-control" placeholder="Nazwa drużyny" autocomplete="off" />
                        <span asp-validation-for="Input.TeamName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.Tag" class="form-control" placeholder="Skrót drużyny" autocomplete="off" />
                        <span asp-validation-for="Input.Tag" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Zarejestruj się</button>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
