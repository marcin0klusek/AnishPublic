@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@section Styles{
                <link rel="stylesheet" href="~/css/identity.css" />
            }
<div class="form-container">
    <div class="flex-column align-middle login-holder">
    <h3 class="title">GameSky</h3>
    <h5 class="subtitle">Logowanie</h5>
        <div class="">
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Input.Email" placeholder="E-mail address" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.Password" placeholder="Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="buttons-container">
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary button-login">Log in</button>
                        </div>
                    </div>
                    <div class="form-group login-actions-container">
                        <p class="action">
                            <a id="forgot-password"  class="isDisabled" @*asp-page="./ForgotPassword"*@>Forgot your password?</a>
                        </p>
                        <p class="action">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p class="action">
                            <a id="resend-confirmation" asp-controller="User" asp-action="logindemo">Log in as demo user</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
